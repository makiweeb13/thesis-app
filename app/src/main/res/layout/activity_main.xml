<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capture_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/preview_of_captured_image"
        app:layout_constraintTop_toBottomOf="@id/buttonCapture"
        app:layout_constraintBottom_toTopOf="@+id/textViewFishClassLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textViewFishClassLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_label"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewFishWeightLabel"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        tools:visibility="visible"/> <!-- For preview in layout editor -->

    <TextView
        android:id="@+id/textViewFishClassValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/textViewFishClassLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewFishClassLabel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        tools:text="Tilapia"
        tools:visibility="visible"/> <!-- For preview in layout editor -->

    <TextView
        android:id="@+id/textViewFishWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        tools:visibility="visible"/> <!-- For preview in layout editor -->

    <TextView
        android:id="@+id/textViewFishWeightValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/textViewFishWeightLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewFishWeightLabel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        tools:text="500g"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
